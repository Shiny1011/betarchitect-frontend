{
  "name": "betarchitect-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run build:content && npm run sync:locales && next build --turbopack",
    "build:content": "node scripts/build-content.mjs",
    "content:i18n": "node scripts/generate-i18n.mjs",
    "content:pages": "node scripts/generate-pages.mjs",
    "content:validate": "npm run content:i18n && npm run content:pages",
    "sync:locales": "node scripts/sync-locale-constants.mjs",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "ci": "npm run check && npm run content:validate && npm run build"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/themes": "^3.2.1",
    "@tanstack/react-query": "^5.90.5",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "framer-motion": "^12.23.22",
    "input-otp": "^1.4.2",
    "jose": "^6.1.0",
    "js-cookie": "^3.0.5",
    "next": "15.5.4",
    "next-intl": "^4.3.12",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-fast-marquee": "^1.6.5",
    "react-hook-form": "^7.65.0",
    "react-swipeable": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "swiper": "^12.0.2",
    "tailwind-merge": "^3.3.1",
    "unified": "^11.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
